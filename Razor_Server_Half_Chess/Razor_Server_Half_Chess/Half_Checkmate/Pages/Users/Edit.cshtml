@page
@model Half_Checkmate.Pages.Users.EditModel

@{
	ViewData["Title"] = "Edit";
}

<div class="text-left mb-2 position-relative">
	<h1 class="mystyle text-on-image">Half Chess</h1>
</div>

<div class="mt-5 position-relative">
	<img src="~/Images/Homepage_Photo.jpeg" title="Homepage Photo" class="img-fluid" />

	<div class="form-overlay">
		<form method="post" autocomplete="on" action="">
			<div class="overlay-content">
				<h1>Edit</h1>
				<hr />
				<input asp-for="TblUsers.UserID" type="hidden" class="form-control" />

				<div class="form-group mb-3">
				<label asp-for="TblUsers.Name" class="control-label"></label>
				<input asp-for="TblUsers.Name" class="form-control" />
				<span asp-validation-for="TblUsers.Name" class="text-danger"></span>   
			</div>

			<div class="form-group mb-3">
				<label asp-for="TblUsers.Phone" class="control-label">Phone</label>
				<input asp-for="TblUsers.Phone" class="form-control" />
				<span asp-validation-for="TblUsers.Phone" class="text-danger"></span>   
			</div>

			<div class="form-group mb-3">
				<label asp-for="TblUsers.Country" class="control-label">Country</label>
					@Html.DropDownListFor(model => model.TblUsers.Country, new SelectList(Model.Countries), string.Empty, new { @class = "form-control" })
				<span asp-validation-for="TblUsers.Country" class="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="TblUsers.NumberOfGames" class="control-label">Number Of Games</label>
				<input asp-for="TblUsers.NumberOfGames" type="number" min=0 step=1 class="form-control" />
				<span asp-validation-for="TblUsers.NumberOfGames" class="text-danger"></span>
			</div>

				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary" />
				</div>
				<div class="form-group">
					<a asp-page="./Index" class="btn btn-secondary">Back to List</a>
				</div>

			</div>
		</form>
	</div>

</div>

