@page
@model Half_Checkmate.Pages.Users.IndexModel

<div class="text-left mb-2 position-relative">
    <h1 class="mystyle text-on-image">Half Chess</h1>
</div>

<div class="mt-5 position-relative">
    <div class="image-container">
        <img src="~/Images/Homepage_Photo.jpeg" title="Homepage Photo" class="img-fluid" />

        <!-- Buttons at the bottom of the image -->
        <!-- Positions the element absolutely at the bottom with a 10px offset -->
        <div class="numbered-buttons" style="position: absolute; bottom: calc(10px);">
            <form action="" method="post" style="display: inline-block; margin-right: 3px; margin-bottom: 5px;">
                <button asp-page="" asp-page-handler="AllPlayers" class="btn btn-primary">All Players (Sort by Name)</button>
            </form>

            <form action="/GamesResultsAndPlayers/UserNameWithLastGame" method="get" style="display: inline-block; margin-right: 3px; margin-bottom: 5px;">
                <button type="submit" class="btn btn-primary">Players and Last Game Date</button>
            </form>

            <form action="/ChessGames" method="get" style="display: inline-block; margin-right: 3px; margin-bottom: 5px;">
                <button type="submit" class="btn btn-primary">Chess Games</button>
            </form>

            <form action="/GamesResultsAndPlayers/FirstPlayerFromEachCountry" method="get" style="display: inline-block; margin-right: 3px; margin-bottom: 5px;">
                <button type="submit" class="btn btn-primary">First Player from Each Country</button>
            </form>

            <form action="/GamesResultsAndPlayers/ShowGamesForSelectedPlayer" method="get" style="display: inline-block; margin-right: 3px; margin-bottom: 5px;">
                <button type="submit" class="btn btn-primary">Games for Selected Player</button>
            </form>

            <form action="/GamesResultsAndPlayers/GamesCountPerPlayer" method="get" style="display: inline-block; margin-right: 3px; margin-bottom: 5px;">
                <button type="submit" class="btn btn-primary">Games Count Per Player</button>
            </form>

            <form action="/GamesResultsAndPlayers/PlayersGroupedbyGamesPlayed" method="get" style="display: inline-block; margin-right: 3px; margin-bottom: 5px;">
                <button type="submit" class="btn btn-primary">Players Grouped by Games Played</button>
            </form>

            <form action="/GamesResultsAndPlayers/PlayersGroupedByCountry" method="get" style="display: inline-block; margin-right: 3px; margin-bottom: 5px;">
                <button type="submit" class="btn btn-primary">Players Grouped By Country</button>
            </form>
        </div>
    </div>

    <!-- Main buttons of the program -->
    <div class="button-group">
        <div class="overlay-button">
            <a asp-page="/Index" class="btn btn-primary">Home</a>
        </div>
        <div class="overlay-button">
            <a asp-page="/Users/Create" class="btn btn-primary">Register New Player</a>
        </div>
        <div class="overlay-button">
            <a asp-page="/Users/Index" class="btn btn-primary">Game Results and Players</a>
        </div>
        <div class="overlay-button">
            <a asp-page="/Privacy" class="btn btn-primary">Privacy</a>
        </div>
    </div>

    <!-- Table with player information -->
    <table class="cinereousTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TblUsers[0].Name)
                    @if (Model.ShowWithoutCaseSensitiveButton)
                    {
                            <form action="" method="post">
                                <button asp-page="" asp-page-handler="WithoutCaseSensitive" class="btn btn-primary">Without Case Sensitive</button>
                            </form>
                    }
                    @if (Model.ShowCaseSensitiveButton)
                    {
                            <form action="" method="post">
                                <button asp-page="" asp-page-handler="AllPlayers" class="btn btn-primary">Case Sensitive</button>
                            </form>
                    }
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TblUsers[0].UserID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TblUsers[0].Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TblUsers[0].Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TblUsers[0].NumberOfGames)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TblUsers)
            {
                    <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.UserID)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.NumberOfGames)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.UserID">Edit</a> |
                            <a asp-page="./Delete" asp-route-id="@item.UserID">Delete</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>

</div>
