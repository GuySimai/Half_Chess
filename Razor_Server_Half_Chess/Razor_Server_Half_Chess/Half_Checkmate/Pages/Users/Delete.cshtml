@page
@model Half_Checkmate.Pages.Users.DeleteModel

@{
	ViewData["Title"] = "Delete";
}

<div class="container">
	<div class="text-left mb-2 position-relative">
		<h1 class="mystyle text-on-image">Half Chess</h1>
	</div>

	<div class="mt-5 position-relative">
		<img src="~/Images/Homepage_Photo.jpeg" title="Homepage Photo" class="img-fluid" />

		<div class="form-overlay">
			<form method="post" autocomplete="on" action="">
				<div class="overlay-content">
					<h1>Delete</h1>

					<h4>Are you sure you want to delete this user?</h4>

					<div class="table-container">
						<hr />
						<dl class="row">
							<dt class="col-sm-2">
								@Html.DisplayNameFor(model => model.TblUsers.Name)
							</dt>
							<dd class="col-sm-10">
								@Html.DisplayFor(model => model.TblUsers.Name)
							</dd>
							<dt class="col-sm-2">
								@Html.DisplayNameFor(model => model.TblUsers.UserID)
							</dt>
							<dd class="col-sm-10">
								@Html.DisplayFor(model => model.TblUsers.UserID)
							</dd>
							<dt class="col-sm-2">
								@Html.DisplayNameFor(model => model.TblUsers.Phone)
							</dt>
							<dd class="col-sm-10">
								@Html.DisplayFor(model => model.TblUsers.Phone)
							</dd>
							<dt class="col-sm-2">
								@Html.DisplayNameFor(model => model.TblUsers.Country)
							</dt>
							<dd class="col-sm-10">
								@Html.DisplayFor(model => model.TblUsers.Country)
							</dd>
						</dl>
					</div>

					<form method="post">
						<!-- 'input' hidden field to hold the user's ID, used for form submission without displaying it -->
						<input type="hidden" asp-for="TblUsers.UserID" />
						<input type="submit" value="Delete" class="btn btn-danger" /> | <!-- The 'btn btn-danger' class gives it a red color (Bootstrap) -->
						<a asp-page="./Index">Back to List</a>
					</form>
				</div>
			</form>
		</div>
	</div>
</div>
